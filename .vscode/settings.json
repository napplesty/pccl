{
    "clangd.path": "clangd",
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/build",
        "--enable-config",
        "--background-index",
        "--pch-storage=memory",
        "--log=verbose"
    ],
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "clangd.onConfigChanged": "restart",
    "editor.semanticHighlighting.enabled": true
}